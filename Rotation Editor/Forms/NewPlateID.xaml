<local:BaseWindow 
        x:Class="Rotation_Editor.NewPlateID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rotation_Editor"
        mc:Ignorable="d"
        Title="NewPlateID" Height="250" Width="250" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="ToolWindow">
    <StackPanel Margin="5">
        <TextBlock Margin="3">Enter new plate ID:</TextBlock>
        <TextBox Margin="3"/>
        <Button Margin="3">Generate new plate ID</Button>
        <TextBlock Margin="3" TextWrapping="Wrap">Enter the parent plate ID, which can be used to generate the new plate ID:</TextBlock>
        <TextBox Margin="3"/>
    </StackPanel>
    
</local:BaseWindow>
